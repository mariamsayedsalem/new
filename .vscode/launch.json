{
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch index.html",
        "file": "${workspaceFolder}/${input:htmlFile}"
      }
    ],
    "inputs": [
      {
        "type": "pickString",
        "id": "htmlFile",
        "description": "Select the HTML file to launch",
        "options": [
          "index.html"
        ]
      }
    ]
  }